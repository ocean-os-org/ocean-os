{
  "name": "ocean-os",
  "private": true,
  "workspaces": [
    "packages/oos-ipfs-server",
    "packages/oos-persistence",
    "packages/oos-remote-sync",
    "packages/oos-local-webui"
  ],
  "scripts": {
    "clean": "rimraf node_modules **/node_modules **/lib **/dist **/*.tsbuildinfo",
    "compile": "tsc -b tsconfig.build.json",
    "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "lint": "npm run format:check",
    "test": "lerna run test",
    "build": "npm run build -ws"
  },
  "devDependencies": {
    "typescript": "^4.9.4"
  },
  "homepage": "https://github.com/oos-org/ocean-os#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oos-org/ocean-os.git"
  },
  "bugs": {
    "url": "https://github.com/oos-org/ocean-os/issues"
  }
}
